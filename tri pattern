import java.util.*;
	public class pattern{
	public static void main(String args[]){
	int r;
	Scanner obj=new Scanner(System.in);
	System.out.println("enter the no of rows : ");
	r=obj.nextInt();
	for(int i=0;i<r;i++){
	for(int j=r;j>=i;j--){
	System.out.print(" ");
	}
	for(int k=0;k<=i;k++){
	System.out.print("*");
	}
	System.out.println();
	}
	}
	}
   
