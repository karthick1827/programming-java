import java.util.*;
	public class verify{
	public static void main(String args[]){
	int age;
	Scanner obj=new Scanner(System.in);
	System.out.println("enter your age : ");
	age=obj.nextInt();
	if(age>=18){
	System.out.println("your eligible to vote!!");
	}
	else{
	age=18-age;
	System.out.println("your eligible to vote after "+age +" years : ");
	}
	}
	}
